#!/bin/bash
set -eu
set -o pipefail

have_mpi=@HAVE_MPI@
have_hdf5=@HAVE_HDF5@

if [ $have_mpi -eq 1 ]; then
  if [ $have_hdf5 -eq 1 ]; then
    PROG="mpirun -np 2 ./test_parallel_h5"

    INPUT="${srcdir}/test_StatisticalInverseProblem/input_test_parallel_h5.txt"

    $PROG $INPUT

    rm -r output_test_parallel_h5
  else
    exit 77
  fi
else
  exit 77
fi
